<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <!-- Supports multiple .NET Framework versions, compatible with Windows 7 -->
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.1" />
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7" />
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.2" />
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
    <runtime>
        <!-- Disable server GC to reduce memory usage (Workstation mode saves more memory) -->
        <gcServer enabled="false" />
        <!-- Enable concurrent GC to reduce UI lag -->
        <gcConcurrent enabled="true" />
        <!-- Allow Large Object Heap (LOH) compression (Requires .NET 4.5.1+) -->
        <gcAllowVeryLargeObjects enabled="true" />
        <!-- Delay assembly loading -->
        <generatePublisherEvidence enabled="false"/>
        <!-- Optimize assembly loading -->
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <probing privatePath="lib" />
        </assemblyBinding>
    </runtime>
    <appSettings>
        <!-- Enable lazy loading to reduce startup memory usage -->
        <add key="EnableLazyLoading" value="true" />
        <!-- Limit log entries to reduce memory (Recommended: 500 for low-end PCs) -->
        <add key="MaxLogEntries" value="1000" />
        <!-- Low-end mode: Reduce animations and refresh frequency (true/false) -->
        <add key="LowPerformanceMode" value="false" />
        <!-- UI refresh interval (ms, Recommended: 100-200 for low-end PCs) -->
        <add key="UIRefreshInterval" value="50" />
        <!-- Enable double buffering to reduce flickering -->
        <add key="EnableDoubleBuffering" value="true" />
    </appSettings>
</configuration>